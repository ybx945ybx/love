<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DynamicHeaderView">
        <attr name="headerTitleTxt" format="string"/>
        <attr name="headerRightImg" format="reference"/>
        <attr name="headerLeftImg" format="reference"/>
        <attr name="headerRightTxt" format="string"/>
        <attr name="headerRightTxtColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="LoveTextView">
        <attr name="expandTypeface" format="enum">
            <enum name="regular" value="0"/>
            <enum name="light" value="1"/>
            <enum name="gotham" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoveImageView">
        <attr name="viewAspectRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="LoveEditText">
        <attr name="top_txt" format="string"/>
        <attr name="edit_hit_txt" format="string"/>
        <attr name="edit_hit_txt_color" format="color"/>
        <attr name="edit_txt_color" format="color"/>
        <attr name="edit_txt" format="string"/>
        <attr name="left_txt" format="string"/>
        <attr name="right_txt" format="string"/>
        <attr name="right_txt_enable" format="boolean"/>
        <attr name="right_img" format="reference"/>
        <attr name="bottom_line_visible" format="boolean"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="EasyRecyclerViewSidebar">
        <attr name="easySidebarBackground"
              format="color"/>
        <attr name="easySidebarFontColor"
              format="color"/>
        <attr name="easySidebarTouchWrapArea"
              format="boolean"/>
    </declare-styleable>
</resources>